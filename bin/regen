#!/usr/bin/env fish


set help "
troy regen
==========

run tests and whatnot
"
if not test -e $argv
  if test $argv = "--help"
    echo $help
    exit 0
  end
end



# helpers

function exclaim
  echo $argv
  say $argv
end

function do
  echo
  echo ">" $argv
  $argv
end

function guard
  if test $status -ne 0
    exclaim $argv
    exit 1
  end
end

function enquote
  perl -pe 's/^(.*)$/"$1"/g'
end

function get_env
  cd $BACKEND_ROOT
  eval (direnv export fish)
  cd mobile/Troy
  eval (direnv export fish)
end

function update
  do get_env
  and echo 'delete *.shot'
  and find . -name '*.shot' | enquote | xargs rm
  do yarn
  # and do git clean -fd react
  and do sync-copied-ts
  and do gql-schema-ts
  and do generate-gql-subscription-mocks
  and do rm -rf react/snaps
  and do generate-component-tests
  and do yarn lint --fix
  and do ./bin/prettier-write
  and do yarn jest react -u
end

cd $BACKEND_ROOT/mobile/Troy
update
guard "fail"
exit 0

