[branch "master"]
	rebase = true
[merge "ours"]
	driver = true
[user]
	email = andrew.monks@samsara.com
	name = monks
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true


[core]
    editor = vim

[alias]
    safe-rebase-target = "!f() { safe-rebase-target; }; f"
    r = "!f() { git fetch ; git rebase $(git safe-rebase-target); }; f"
    ri= "!f() { git fetch ; git rebase -i $(git safe-rebase-target); }; f"
    p = "!f() { branch=$(git rev-parse --abbrev-ref HEAD); git push --force-with-lease --set-upstream -- origin $branch; }; f"
    rp = "!f() { git r; git p; }; f"
    rip = "!f() { git ri; git p; }; f"
    summon = "!f() { b=$1; git fetch origin +refs/heads/$b:refs/remotes/origin/$b $b:$b ; }; f"
    branches = "branch --sort=-committerdate"
    touching = "rev-list --all --format=%B"
    fix-dates = "!f() { merge_base=$(git merge-base HEAD origin/master) ; git rebase $merge_base --exec \"git commit --amend --reset-author --no-edit\"; }; f"
    switch = "!f() { b=`git branches | fzf` ; git checkout $b ; }; f"



